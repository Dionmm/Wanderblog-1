<!DOCTYPE html>
<html lang="en">
<head>
    {% include 'head_include.twig' %}
</head>
<body>
{% include 'nav_include.twig' %}

<div class="container-fluid admin-container">

    <div class="row bg-image-container">
        <div class="bg-image">
            <div class="title-container">
                <h1 class="title">
                    {% if not error %}
                    Admin Page
                    {% else %}
                    Something went wrong
                    {% endif %}
                </h1>
            </div>
        </div>
    </div>
    {% if not error  %}
        <div class="panel with-nav-tabs panel-default">
            <div class="panel-heading">
                <ul class="nav nav-tabs admin-page-navtabs">
                    <li class="active"><a href="#tab-link-adventures" data-toggle="tab">Adventures</a></li>
                    <li><a href="#tab-link-unverified-users" data-toggle="tab">Unverified Users</a></li>
                    <li><a href="#tab-link-all-users" data-toggle="tab">All Users</a></li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="tab-link-adventures">
                        <div class="row adventure-list-container">
                            <div class="col-sm-12">
                                {% for adventure in adventures %}
                                    <div adventure-id="{{ adventure.PostID }}">
                                        <br>
                                        <p class="adventure-title-link">
                                            <a href="adventure.php?id={{ adventure.PostID }}">{{ adventure.Title }}</a>
                                        </p>
                                        <div class="under-adventure-line">
                                            <p class="my-adventures-under-text"><span class="pe-7s-like my-adventures-upvotes"></span> {{ adventure.Upvotes }}</p>
                                            &nbsp;&bull;&nbsp;
                                            <p class="my-adventures-under-text"><span class="pe-7s-comment my-adventures-comments"></span> {{ adventure.CommentAmount }}</p>
                                            &nbsp;&bull;&nbsp;
                                            <p class="adventure-date">{{ adventure.DatePosted }}</p>
                                            &nbsp;&bull;
                                            <li class="dropdown list-unstyled"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="pe-7s-angle-down pe-lg"></span></a>
                                                <ul class="dropdown-menu">
                                                    <li><a href="adventure.php?id={{ adventure.PostID }}&edit=1"> Edit</a></li>
                                                    <li><a href="#" class="remove-my-adventure-link" data-toggle="modal" data-target="#remove-adventure" adventure-id="{{ adventure.PostID }}"> Remove</a></li>
                                                </ul>
                                            </li>
                                        </div>
                                        <hr class="my-adventures-separator">
                                        {% if (adventure == adventures|last) %}
                                            <br><br>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            </div>

                            {#MODAL STUFF#}
                            <div class="modal fade" id="remove-adventure" tabindex="-1" role="dialog" aria-labelledby="remove" aria-hidden="true">
                                <div class="modal-dialog remove-adventure-modal">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">
                                            <button type="button" class="close remove-adventure-modal-close" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                                            <h4 class="panel-title remove-adventure-modal-header">Confirm the action</h4>
                                        </div>
                                        <form action="#" method="post">
                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                                        <p>Selected adventure will be permanently removed.</p>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                                        <p>Do you wish to continue?</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="panel-footer">
                                                <div class="row">
                                                    <div class="col-xs-6">
                                                        <input type="button" data-dismiss="modal" class="btn btn-danger adventure-remove-confirm" value="Remove"/>
                                                    </div>
                                                    <div class="col-xs-6">
                                                        <input type="button" data-dismiss="modal" class="btn btn-success adventure-remove-cancel pull-right" value="Cancel" />
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="loading-modal" tabindex="-1" role="dialog" aria-labelledby="loading" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-center">
                                    <div id="loading-modal-content">
                                        <img id="loading-spin-gif" src="../img/loading_spin.gif" width="100" height="100">
                                        <br>
                                        <h2>Removing..</h2>
                                    </div>
                                </div>
                            </div>
                            {#END OF MODAL STUFF#}
                        </div>
                    </div>


                    <div class="tab-pane fade" id="tab-link-unverified-users">
                        <table class="table table-striped custab">
                            <thead>
                            <tr>
                                <th>Username</th>
                                <th>User Type</th>
                                <th>Email</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Country</th>
                                <th>Delete User</th>
                            </tr>
                            </thead>
                            {% for user in users %}
                                {% if (user.UserType == 'unverified') %}
                                    <tr username="{{ user.Username }}">
                                        <td><h3 class="user-username"><a href="author.php?username={{ user.Username }}" title="">{{ user.FirstName ~ " " ~ user.LastName}}</a></h3></td>
                                        <td>
                                            <div username="{{ user.Username }}">
                                                {{ user.UserType }}
                                                <span class="glyphicon glyphicon-pencil change-user-type-icon"></span>
                                            </div>
                                        </td>
                                        <td>{{ user.Email }}</td>
                                        <td>{{ user.FirstName }}</td>
                                        <td>{{ user.LastName }}</td>
                                        <td>{{ user.Country }}</td>
                                        <td>Delete user</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        </table>
                    </div>

                    <div class="tab-pane fade" id="tab-link-all-users">
                        <table class="table table-striped custab">
                            <thead>
                            <tr>
                                <th>Username</th>
                                <th>User Type</th>
                                <th>Email</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Country</th>
                                <th>Delete User</th>
                            </tr>
                            </thead>
                            {% for user in users %}
                                <tr>
                                    <td><h3 class="user-username"><a href="author.php?username={{ user.Username }}" title="">{{ user.FirstName ~ " " ~ user.LastName}}</a></h3></td>
                                    <td>
                                        <div class="user-type-cell" username="{{ user.Username }}">
                                            <p>
                                                {{ user.UserType }}
                                                <span class="glyphicon glyphicon-pencil change-user-type-icon"></span>
                                            </p>
                                        </div>
                                    </td>
                                    <td>{{ user.Email }}</td>
                                    <td>{{ user.FirstName }}</td>
                                    <td>{{ user.LastName }}</td>
                                    <td>{{ user.Country }}</td>
                                    <td>Delete user</td>
                                </tr>
                            {% endfor %}
                        </table>

                        {# LOADING MODAL #}
                        <div class="modal fade" id="loading-modal-all-users" tabindex="-1" role="dialog" aria-labelledby="loading" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-center">
                                <div id="loading-modal-all-users-content">
                                    <img id="loading-spin-gif" src="../img/loading_spin.gif" width="100" height="100">
                                    <br>
                                    <h2>Removing..</h2>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    {% else %}
        <div class="row adventure-list-container">
            <div id="not-found-container">
                <h2>Please make sure you have the right privileges to view this page.</h2>
                <br>
                <!--ONLY MAKING THIS ROW Bootstrap BS FOR THE GREAT PURPOSE-->
                <div class="row">
                    <div class="col-sm-4 return-to-main-page">
                        <h3><a href="index.php">Return to main page</a></h3>
                    </div>
                    <!--AN ABSOLUTE MUST HAVE ON ANY 404 PAGE OR SIMILAR -- DO NOT DELETE IN ANY CIRCUMSTANCES-->
                    <div class="col-sm-8">
                        <img src="http://i258.photobucket.com/albums/hh253/jimifunguzz/cat%20gifs/cat-sad-cat.gif" class="img-thumbnail">
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>

{% include 'script_include.twig' %}

</body>
</html>